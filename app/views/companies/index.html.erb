<div class="d-flex align-items-center">
  <h1>会社一覧</h1>
  <div class="ml-auto boards__linkBox">
    <%= link_to '会社追加', new_company_path, class: 'btn btn-outline-dark' %>
  </div>
</div>

<% if flash[:notice] %>
  <div class="alert alert-danger"><%= flash[:notice] %></div>
<% end %>

<table class="table table-hover boards__table">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>会社名</th>
      <th>住所</th>
      <th>ホームページ</th>
      <th>作成日時</th>
      <th>更新日時</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.id %></td>
        <td><%= company.name %></td>
        <td><%= company.address1 %> <%= company.address2 %></td>
        <td><%= company.homepage %></td>
        <td><%= company.created_at.to_s(:datetime_jp) %></td>
        <td><%= company.updated_at.to_s(:datetime_jp) %></td>
        <td><%= link_to '詳細', company, class: 'btn btn-outline-dark' %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @companies %>
